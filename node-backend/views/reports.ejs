<%- include('base') %>
<div class="container-fluid">
    <h2 class="mb-4">Inventory Reports</h2>
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4>Stock Level Report</h4>
                    <a href="/export_inventory_report" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-download"></i> Export Report
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Category</th>
                                <th>Total Items</th>
                                <th>Total Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% categories.forEach(category => { %>
                            <tr>
                                <td><%= category.category %></td>
                                <td><%= category.total_items %></td>
                                <td>$<%= category.total_value.toFixed(2) %></td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h4>Supplier Performance</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Supplier</th>
                                <th>Performance</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% suppliers.forEach(supplier => { %>
                            <tr>
                                <td><%= supplier.name %></td>
                                <td><%= supplier.performance %>%</td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4>Low Stock Predictions</h4>
                    <a href="/sales_trend" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-chart-line"></i> Sales Trend
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Current Stock</th>
                                <th>Avg Monthly Sales</th>
                                <th>Predicted Needs</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% low_stock_predictions.forEach(item => { %>
                            <tr>
                                <td><%= item.product.name %></td>
                                <td><%= item.product.stock %></td>
                                <td><%= item.prediction.avg_monthly_sales.toFixed(2) %></td>
                                <td>
                                    <% item.prediction.predictions.forEach((pred, idx) => { %>
                                        <%= pred.toFixed(2) %><%= idx !== item.prediction.predictions.length - 1 ? ', ' : '' %>
                                    <% }) %>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
